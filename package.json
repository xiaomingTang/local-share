{
  "name": "local-share",
  "version": "0.0.4",
  "description": "本地文件共享桌面应用",
  "main": "src/main.js",
  "scripts": {
    "build": "tsc && pnpm run build:renderer",
    "build:renderer": "tsup renderer/renderer.ts --format iife --out-dir renderer --sourcemap --target es2020",
    "build-watch": "tsc -w",
    "dev:wsl": "pnpm run build && dbus-run-session -- electron .",
    "dev": "pnpm run build && electron .",
    "start": "electron .",
    "pack": "electron-builder",
    "dist": "cross-env ELECTRON_BUILDER_CACHE=.\\.cache pnpm run build && cross-env ELECTRON_BUILDER_CACHE=.\\.cache electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/lodash-es": "^4.17.12",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.6",
    "@types/qrcode": "^1.5.5",
    "@types/winreg": "^1.2.36",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^24.9.1",
    "tsup": "^8.5.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@zimi/remote": "^0.2.4",
    "express": "^4.18.2",
    "iconv-lite": "^0.7.1",
    "lodash-es": "^4.17.22",
    "multer": "^2.0.0",
    "qrcode": "^1.5.3",
    "winreg": "^1.2.5"
  },
  "build": {
    "appId": "com.localshare.app",
    "productName": "LocalShare",
    "compression": "store",
    "electronLanguages": [
      "zh-CN"
    ],
    "asar": true,
    "asarUnpack": [
      "**/*.node",
      "node_modules/**/build/Release/**"
    ],
    "directories": {
      "output": "release"
    },
    "files": [
      "src/**/*",
      "renderer/**/*",
      "web/**/*",
      "common/**/*",
      "assets/**/*",
      "!**/*.map",
      "!**/test/**",
      "!**/tests/**",
      "!**/docs/**",
      "!**/README.md",
      "!**/README.*",
      "!**/locales/**"
    ],
    "extraResources": [
      {
        "from": "assets/folder-share.ico",
        "to": "assets/folder-share.ico"
      }
    ],
    "win": {
      "target": "zip",
      "icon": "assets/icon.ico"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.exe"
    }
  },
  "author": "LocalShare Team",
  "license": "MIT"
}
